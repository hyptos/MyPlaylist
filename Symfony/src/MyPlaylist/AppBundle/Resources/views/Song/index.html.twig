{% extends "MyPlaylistAppBundle:MyPlaylist:layout.html.twig" %}

{% block title %}{{ parent() }} - Musiques{% endblock %}

{% block body %}
    <h3>Accueil</h3>
    <table class="table table-striped" >
    <tr>
    	<th>
    		Titre
    	</th>
    	<th>
    		durée
    	</th>
    	<th>
    		Chemin
    	</th>
    	<th>
    		Ajout
    	</th>
    </tr>
  	{% for value in song %}
    	<tr>
    		<td><a href="http://localhost/Symfony/web/app_dev.php/song/view/{{ value.id }}" >{{ value.title }}</a></td>
    		<td>{{ value.length }}</td>
    		<td>{{ value.filename }}</td>
    		<td><input type="submit" class="btn" value="Ajouter" /></td>
    	</tr>>
  	{% else %}
  	    	<p>Pas de Musique(s) trouvé.</p>
  	{% endfor %}
</table>
{% endblock %}